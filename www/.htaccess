
#Use utf8!
AddDefaultCharset utf-8


#Si l'url commence par dev, alors c'est du dev
SetEnvIfNoCase Host ^dev\.(.*)$ QWIK_ENV=dev

#Sinon, c'est du prod
SetEnvIfNoCase Host ^www\.(.*)$ QWIK_ENV=prod


RewriteEngine On

#En mode dev, si on a un dev devant, on l'enlève de l'url rewriting
RewriteCond %{HTTP_HOST} ^dev.(.*)$ [NC]
RewriteRule ^q/(.*)$ pissette/%1/$1 [L]

#Pour tester l'url rewriting
#RewriteRule ^q/(.*)$ test.php?ok[]=$1&ok[]=$2&ok[]=%1&ok[]=%2 [L]



RewriteCond %{HTTP_HOST} (.+)
RewriteRule ^q/(.+)    pissette/%1/$1 [L]

#Pour tester l'url rewriting
#RewriteRule ^q/(.+)    test.php?ok=$1&ok2=%1 [L]



RewriteCond %{REQUEST_FILENAME} !-f
#RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L]
